set ttyfast
set showmode
set showcmd
set title
set hidden
set ffs=unix,dos,mac
let &term=&term

set number

set nobackup
set nowritebackup
set nowb
set noswapfile

set undolevels=1000

syntax on
set t_Co=256

let g:solarized_termcolors=256
set background=dark
colorscheme monokai

set colorcolumn=120
highlight ColorColumn ctermbg=238 guibg=#232728

set expandtab
set tabstop=2
set shiftwidth=2

set list
set listchars=tab:>-,trail:.,nbsp:.
